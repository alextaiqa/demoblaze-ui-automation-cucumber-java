<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ============================
         CONSOLE APPENDER
         Logs messages to the terminal/console
    ============================ -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Pattern: timestamp, thread, level, logger, message -->
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ============================
         FILE APPENDER
         Logs everything to files with rolling policy
    ============================ -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Base log file -->
        <file>logs/test-automation.log</file>

        <!-- Rolling policy: one file per day -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/test-automation.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Keep logs for 30 days -->
            <maxHistory>30</maxHistory>
            <!-- Total size cap for all log files -->
            <totalSizeCap>200MB</totalSizeCap>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ============================
         ERROR FILE APPENDER
         Only logs ERRORs separately
    ============================ -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/test-automation-errors.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/test-automation-errors.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ============================
         SPECIFIC LOGGER LEVELS
         Reduce noise from third-party libraries
    ============================ -->
    <logger name="org.openqa.selenium" level="WARN"/>
    <logger name="io.github.bonigarcia" level="WARN"/>
    <logger name="org.apache.http" level="WARN"/>
    <logger name="org.testng" level="INFO"/>

    <!-- ============================
         ROOT LOGGER
         Sends all logs to console + main file + error file
    ============================ -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

</configuration>